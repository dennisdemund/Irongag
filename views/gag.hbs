<section>
  <div>
    <h3 class="postDescription">{{ post.name }}</h3>
    <p>TAGS: {{post.tags}}</p>
     <div class="postProperties">
        <button class="btn-post" url="/like/{{post._id}}"><i class="material-icons">thumb_up</i></button>
        <button class="btn-post" url="/dislike/{{post._id}}"><i class="material-icons">thumb_down</i></button>
    </div>
    <a class="fakeLink"><img class="postImage" src={{post.url}} alt="Loading Image"></a>
  </div>
  <div>
    <label for="">Comments</label>
    <form action="/gag/{{post._id}}" method="post">
      <input type="text" name="comment">
      <button class="btn" type="submit">Post</button>
    </form>
  </div>

  <h1>Check the latest comments here</h1>

  {{#each post.comments}}
  <div>
    <h2 class="commentList">{{this}}</h2>
  </div>
  {{/each}}
</section>